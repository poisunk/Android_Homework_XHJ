<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.secondhomework.widget.MyProgressBar
        android:id="@+id/item_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        app:progress="80"/>

    <TextView
        android:id="@+id/item_progress_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/item_progress_bar"
        app:layout_constraintBottom_toBottomOf="@id/item_progress_bar"
        app:layout_constraintLeft_toLeftOf="@id/item_progress_bar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/item_progress_bar"
        app:layout_constraintTop_toTopOf="@id/item_progress_bar"
        app:layout_constraintBottom_toBottomOf="@id/item_progress_bar"
        android:text="80%"
        android:layout_margin="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>